# Plantilla de configuración para ejecutable aislado
# Copia este archivo a .env.exe y configura los valores

# Base de datos unificada (compartida con desarrollo)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=economia_db
DB_PORT=3306

# Flask - IMPORTANTE: Genera una SECRET_KEY única
# Ejecutar: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION

# Logging
LOG_LEVEL=INFO

# Modo de ejecución
FLASK_ENV=production
